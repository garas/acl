{
    "name": "cakephp/acl",
    "description": "Acl Plugin for CakePHP framework",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "acl"
    ],
    "homepage": "https://cakephp.org",
    "license": "MIT",
    "authors": [
        {
            "name": "CakePHP Community",
            "homepage": "https://github.com/cakephp/acl/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/cakephp/acl/issues",
        "forum": "https://stackoverflow.com/tags/cakephp",
        "irc": "irc://irc.freenode.org/cakephp",
        "source": "https://github.com/cakephp/acl"
    },
    "require": {
        "cakephp/cakephp": "^3.8.2",
        "cakephp/plugin-installer": "^1.0"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0",
        "phpunit/phpunit": "^5.7.14|^6.0"
    },
    "autoload": {
        "psr-4": {
            "Acl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acl\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "TestApp\\": "tests/test_app/src/",
            "TestPlugin\\": "tests/test_app/Plugin/TestPlugin/src/"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --parallel=16 -p src/ tests/",
        "cs-fix": "phpcbf --parallel=16 -p src/ tests/",
        "phpstan": "phpstan analyse src/ tests/",
        "phpstan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 && mv composer.backup composer.json",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=clover.xml"
    }
}
